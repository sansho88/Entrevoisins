<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#11000000"
    tools:context=".ProfileNeighbourActivity">

    <ImageView
        android:id="@+id/activity_profile_avatar_image"
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:scaleType="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/activity_profile_nomAvatar_text"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="228dp"
        android:layout_marginStart="8dp"
        android:text="$NOM$"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:background="@color/fond_leger"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.059"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/activity_profile_description_text"
        android:layout_width="360dp"
        android:layout_height="100dp"
        android:background="@color/white"

        android:text="$DESCRIPTION$"
        android:paddingStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_profile_nomInfos_text" />


    <TextView
        android:id="@+id/activity_profile_nomInfos_text"
        android:layout_width="360dp"
        android:layout_height="35dp"
        android:layout_marginTop="18dp"
        android:background="@color/white"
        android:gravity="bottom"
        android:paddingStart="8dp"
        android:paddingBottom="5dp"
        android:text="$NOM$"
        android:textColor="#FF000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_profile_avatar_image" />

    <TextView
        android:id="@+id/textView_aproposdemoi_pasToucher"
        android:layout_width="354dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@color/white"
        android:text="A propos de moi"
        android:textColor="#FF000000"
        android:textSize="25sp"
        android:gravity="bottom"
        android:paddingBottom="2dp"
        android:paddingTop="6dp"
        android:paddingHorizontal="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_profile_description_text" />

    <TextView
        android:id="@+id/aPropos_txt"
        android:layout_width="354dp"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        android:paddingStart="15dp"
        android:background="@color/white"
        android:text="Blabla"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_aproposdemoi_pasToucher" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/activity_profile_favoris_floatingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"

        android:clickable="true"
        android:outlineAmbientShadowColor="@color/transparent"
        app:backgroundTint="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/activity_profile_nomInfos_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_profile_avatar_image"

        app:layout_constraintVertical_bias="0.368"
        app:srcCompat="@drawable/ic_star_border_white_24dp" />

    <ImageButton
        android:id="@+id/activity_profile_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:backgroundTint="@color/transparent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent"

        app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" >

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="409dp"
        android:layout_height="128dp"
        android:layout_marginBottom="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/aPropos_txt"
        app:layout_constraintVertical_bias="0.0" />




</android.support.constraint.ConstraintLayout>